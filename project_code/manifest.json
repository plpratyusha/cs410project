{
  "manifest_version": 2,
  "name": "Sentiment Analysis Extension",
  "version": "1.0",
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "images/icon-16.png",
    "default_title": "Sentiment Analysis"
  }
}